    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Train Travel Time</title>
    <style>
        body { font-family: Arial, sans-serif; max-width: 600px; margin: 2em auto; padding: 1em; border: 1px solid #ccc; border-radius: 8px; }
        h1 { text-align: center; }
        .form-group { margin-bottom: 1em; }
        label { display: block; margin-bottom: 0.5em; font-weight: bold; }
        select { width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px; }
        button { padding: 10px 15px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer; }
        button:hover { background-color: #0056b3; }
        .result { margin-top: 1.5em; padding: 1em; background-color: #e9e9e9; border-radius: 4px; text-align: center; }
    </style>
</head>
<body>
    <h1>Express Train Travel Time</h1>
    <form id="travelForm">
        <div class="form-group">
            <label for="startStation">Starting Station:</label>
            <select id="startStation" name="startStation" required>
                <option value="">-- Select a station --</option>
                <option value="City Hub">City Hub</option>
                <option value="Metro Center">Metro Center</option>
                <option value="Airport Terminal">Airport Terminal</option>
                <option value="Financial District">Financial District</option>
            </select>
        </div>
        <div class="form-group">
            <label for="endStation">Ending Station:</label>
            <select id="endStation" name="endStation" required>
                <option value="">-- Select a station --</option>
                <option value="City Hub">City Hub</option>
                <option value="Metro Center">Metro Center</option>
                <option value="Airport Terminal">Airport Terminal</option>
                <option value="Financial District">Financial District</option>
            </select>
        </div>
        <button type="submit">Get Travel Time</button>
    </form>
    <div id="result" class="result">
        Select a start and end station to see the travel time.
    </div>

    <script>
        document.getElementById('travelForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const start = document.getElementById('startStation').value;
            const end = document.getElementById('endStation').value;
            const resultDiv = document.getElementById('result');

            // In a real application, you would make a fetch() call to a backend API here.
            // For this example, we'll use a hard-coded map.
            const routes = {
                "City Hub-Metro Center": 25,
                "City Hub-Financial District": 15,
                "Metro Center-Airport Terminal": 40
            };
            const routeKey1 = `${start}-${end}`;
            const routeKey2 = `${end}-${start}`;

            if (routes[routeKey1]) {
                resultDiv.textContent = `Direct express travel time is ${routes[routeKey1]} minutes.`;
            } else if (routes[routeKey2]) {
                resultDiv.textContent = `Direct express travel time is ${routes[routeKey2]} minutes.`;
            } else {
                resultDiv.textContent = 'No direct express route found.';
            }
        });
    </script>
</body>
</html>
